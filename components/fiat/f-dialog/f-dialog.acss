.f-dialog__container {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate3d(-50%, -50%, 0);
  transform-origin: top left;
  width: 100%;
  z-index: 999;
  display: flex;
  align-items: center;
  justify-content: center;
  pointer-events: auto;
}

.f-dialog__container__inner {
  width: 100%;
  overflow-y: auto;
  pointer-events: auto;
  max-height: 100vh;
}

.f-dialog__container--modal {
  width: 270px;
}
